.side-bar
  .user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class: "icon-btn" do
          = icon('fas', 'edit' )
        = link_to edit_user_path(current_user.id), class: "icon-btn" do
          = icon('fas', 'cog' )
  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group-font" do
          .group__name
            = group.name
          .group__comment
            = group.show_last_message